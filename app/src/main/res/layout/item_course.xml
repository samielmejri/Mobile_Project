<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Image de l'aperçu du document -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_document_preview" />

        <!-- Titre du document -->
        <TextView
            android:id="@+id/textViewDocumentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre du document"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <!-- Informations supplémentaires (auteur, pages restantes) -->
        <TextView
            android:id="@+id/textViewDocumentDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouté par Auteur • 4 pages restantes"
            android:textSize="14sp"
            android:textColor="#777777"
            android:paddingTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
